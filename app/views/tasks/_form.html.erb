<%= simple_form_for(@task) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :due_date %>
  <%= f.association :category%>
</div>



<div id="participanting_users">
  <%= f.simple_fields_for :participanting_users do |x| %>
  <%= render 'participanting_user_fields', f: x %>
  <% end %>
  <div class="participants-container">
    <%= link_to_add_association 'add participants',f, :participanting_users %>
  </div>


</div>



<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>